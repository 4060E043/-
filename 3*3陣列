#include <iostream> 
using namespace std; 

int main() { 
    const int row = 4;
    const int column = 4;
    int iarr[row][column]; 

    for(int i = 1; i < row; i++) 
        for(int j = 1; j < column; j++) 
            iarr[i][j] = i*j; 

    for(int i = 1; i < row; i++) { 
        for(int j = 1; j < column; j++) 
            cout << iarr[i][j] << "\t"; 
        cout << endl; 
    } 

    return 0; 
}
